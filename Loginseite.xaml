<Window x:Class="SE_Projekt.Loginseite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">

        <!-- Mitarbeiter-Login -->
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Anmeldung Mitarbeiter" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Nachname" />
            <TextBox Name="EmployeeNameTextBox" Width="240" Height="30" Margin="0,5,0,10"/>
            <TextBlock Text="Geburtstag" />
            <DatePicker Name="EmployeeBirthdayDatePicker" Width="240" Height="30" Margin="0,5,0,10"/>
            <Button Content="Anmelden" Width="240" Height="35" Background="LightBlue" Click="EmployeeLoginButton_Click" />
        </StackPanel>

        <!-- Manager-Login -->
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Anmeldung Manager" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Managernummer" />
            <TextBox Name="ManagerNameTextBox" Width="240" Height="30" Margin="0,5,0,10"/>
            <TextBlock Text="Passwort" />
            <PasswordBox Name="ManagerPasswordBox" Width="240" Height="30" Margin="0,5,0,10"/>
            <Button Content="Anmelden" Width="240" Height="35" Background="LightBlue" Click="ManagerLoginButton_Click" />

        </StackPanel>

    </StackPanel>
</Window>